
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  firstname     String
  lastname      String
  password      String
  rdvs          Rdv[]
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  role          String?

  @@map("user")
}

model Rdv {
  id       Int    @id @default(autoincrement())
  title    String
  withWhom String
  date     String
  address  String
  userId   Int
  user     User   @relation(fields: [userId], references: [id])

  @@map("rdv")
}
